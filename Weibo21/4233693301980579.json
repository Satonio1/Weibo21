[{"uid": "3570518031", "mid": "4233693301980579", "user_name": "严州府尹hz", "text": "陕西榆林米脂县发生19名中学生被刺，其中7名被刺死的严重凶杀事件，让社会良知痛心不已，除悲哀就是惆怅。更让人痛心的是，凶手是一名辍学的未成年男孩。这个重大恶心案件，看是一桩偶发的凶杀案，其实是一件具有深层社会背景的一桩未成年重大刑事案。诱发案件的原因有：1、全社会严酷地应试教育，造成家庭、学校都注重学生的成绩，不关注孩子的社会道德与社会责任教育，学校放弃了履行社会责任的关爱，任其行凶孩子辍学，埋下了这个凶果；2、当下政府官僚主义盛行，奉行“顶层”，不走基层群众路线，不去积极解决民怨极大的社会案件和社会疾症，不愿动用体制职能，让一些原本可以解决的社会矛盾，逐渐酿成重大恶心事件。这是政府放手社会矛盾所引发的又一重大典型案件；3、现在群众投诉无门，信访权力被严重剥夺，不管是公益的还是投拆的，大多一概不会回复，严重伤害社会感情，挫伤了民意，隐孕了社会危机，引发社会极度忧虑。人们期待改变。", "parent": null, "t": "1524874560"}, {"uid": "1678314164", "mid": "4233696507303689", "user_name": "苍凉天空", "text": "你是不是傻子，28岁是未成年？你丫是幼儿吧", "parent": "4233693301980579", "t": "1524875340"}, {"uid": "6010609273", "mid": "4233695273282155", "user_name": "鹤望兰LT", "text": "90年未成年？眼睛长在脚上？", "parent": "4233693301980579", "t": "1524875040"}, {"uid": "6048368390", "mid": "4233787333943864", "user_name": "香蕉你个不拿呐呀", "text": "回复@booth磊:那只要成年和几几年有什么关系？你在几条下面都要说99年？", "parent": "4233707814510208", "t": "1524897000"}, {"uid": "6343280949", "mid": "4233707814510208", "user_name": "booth磊", "text": "回复@香蕉你个不拿呐呀:我说未成年了？", "parent": "4233701313282286", "t": "1524878040"}, {"uid": "6048368390", "mid": "4233701313282286", "user_name": "香蕉你个不拿呐呀", "text": "回复@booth磊:99年未成年？你会算数吗", "parent": "4233696658028039", "t": "1524876480"}, {"uid": "6343280949", "mid": "4233696658028039", "user_name": "booth磊", "text": "那是99年的", "parent": "4233695273282155", "t": "1524875400"}, {"uid": "5476794811", "mid": "4233699870343869", "user_name": "魔鬼中的小小小天使", "text": "对呀，我也看到是90年，怎么是未成年呢？就算是99年，今年是2018年，也成年了呀", "parent": "4233693301980579", "t": "1524876120"}, {"uid": "1949810963", "mid": "4233694732691465", "user_name": "氪蓝鲸", "text": "90年生人，还未成年？数学是体育老师教的吗？", "parent": "4233693301980579", "t": "1524874920"}, {"uid": "2719879957", "mid": "4233694925932220", "user_name": "X追捧者", "text": "睁大你的狗眼看看清楚，凶手是未成年吗？带你麻痹的节奏！", "parent": "4233693301980579", "t": "1524874980"}, {"uid": "3499070393", "mid": "4233697563620251", "user_name": "风中的娜乌西卡", "text": "90年生，28岁，死亡人数上升到9人了", "parent": "4233693301980579", "t": "1524875580"}, {"uid": "5819477378", "mid": "4233694769743461", "user_name": "沐雨晴空的筱晴梦HQY", "text": "可不是未成年哦 人家28岁了呦", "parent": "4233693301980579", "t": "1524874920"}, {"uid": "5727673348", "mid": "4233870734108242", "user_name": "你这么仓促能想到啥啊", "text": "满嘴反社会的话 脑子有包", "parent": "4233693301980579", "t": "1524916860"}, {"uid": "2165875844", "mid": "4233710024869666", "user_name": "东凰_今天P图了吗", "text": "反思个毛，都是反社会和懦弱的借口。刀向弱者，哪怕你有天大的冤屈都不值得同情。善良的人哪怕比他处于还糟糕的境地，也不会去杀人，这个社会上谁没受点挫折和委屈，也没各个都去杀人", "parent": "4233693301980579", "t": "1524878580"}, {"uid": "3261977931", "mid": "4233707763772189", "user_name": "23333小豆芽", "text": "他不是未成年啊！！！比我都大！我都成年好几年了！！！！！", "parent": "4233693301980579", "t": "1524878040"}, {"uid": "6090961762", "mid": "4233707252968111", "user_name": "老陈爱唠叨", "text": "做键盘侠也要做得认真点啊，内容都不看清楚就乱喷。和未成年有啥关系？和辍学有啥关系？每个学校门口都应该设立警卫，附近要有警察巡逻，周边店铺单位要组织好民兵队伍，以及简单医疗救治人员以防恶性事件的发生。政府要反思", "parent": "4233693301980579", "t": "1524877920"}, {"uid": "1414590224", "mid": "4233706933686460", "user_name": "爱咩咩的嘿嘿", "text": "放你的屁", "parent": "4233693301980579", "t": "1524877800"}, {"uid": "5403919179", "mid": "4233694585470691", "user_name": "麟义炎", "text": "90年未成年？", "parent": "4233693301980579", "t": "1524874860"}, {"uid": "2548282662", "mid": "4233694581947407", "user_name": "戴表的河蟹1985", "text": "凶手90年出生，还未成年……算数不行啊", "parent": "4233693301980579", "t": "1524874860"}, {"uid": "2774749125", "mid": "4233694477260038", "user_name": "早先少年", "text": "90年是未成年？", "parent": "4233693301980579", "t": "1524874860"}, {"uid": "6029832212", "mid": "4233697618753378", "user_name": "叫我小李童鞋", "text": "未成年？？？", "parent": "4233693301980579", "t": "1524875580"}]