[{"uid": "2677617437", "mid": "4459915760732970", "user_name": "海明威评", "text": "#今日车吻# 大过年买车就买车好好开车啊！郑州林肯4S店试驾车带客户试驾过程中秀车未成功，据说死两个人了。大家去试驾也好，试乘也好，一切以安全为主。其他都是扯淡！", "parent": null, "t": "1578810240"}, {"uid": "2384025110", "mid": "4459935980989124", "user_name": "一不小心成现任", "text": "客户自己开的车，出事故造成试驾员工死亡，不知道情况别乱说", "parent": "4459915760732970", "t": "1578815040"}, {"uid": "2677617437", "mid": "4459990628668727", "user_name": "海明威评", "text": "回复@赤城白彗星丶:呵呵。", "parent": "4459935980989124", "t": "1578828060"}, {"uid": "2881402692", "mid": "4459971351312862", "user_name": "KumokumoC", "text": "回复@海明威评:您觉得您这是在强词夺理吗？", "parent": "4459946936499785", "t": "1578823440"}, {"uid": "2677617437", "mid": "4459946936499785", "user_name": "海明威评", "text": "回复@大乌贼学长:客户不能秀车技嘛？", "parent": "4459946244318542", "t": "1578817620"}, {"uid": "3169881047", "mid": "4459946244318542", "user_name": "大乌贼学长", "text": "回复@海明威评:如果确实是客户在主驾驶位的话，这句秀车未成功，明显会诱导以为是试驾员开的车。", "parent": "4459941736118969", "t": "1578817500"}, {"uid": "2677617437", "mid": "4459941736118969", "user_name": "海明威评", "text": "认识字不，我说的试驾车带客户试车，说了试驾专员嘛！", "parent": "4459935980989124", "t": "1578816420"}, {"uid": "2413739412", "mid": "4460193393494456", "user_name": "佑佑0822", "text": "总有些半吊子司机拿了驾照没几天，自以为技术不错，买不起车还冒充大尾巴狼去拿4s店的试驾车去过车瘾。", "parent": "4459915760732970", "t": "1578876420"}, {"uid": "2677617437", "mid": "4460198485557401", "user_name": "海明威评", "text": "不管怎么说，道路试驾还是安全第一。驾驶员要有自知之明，同时试驾专员要评价驾驶员的安全驾驶能力。总之，安全无小事！", "parent": "4460193393494456", "t": "1578877620"}, {"uid": "1985089787", "mid": "4459966654066212", "user_name": "从别后_忆相逢_几回魂梦与君同", "text": "A柱弯了？", "parent": "4459915760732970", "t": "1578822360"}, {"uid": "2677617437", "mid": "4460273945834606", "user_name": "海明威评", "text": "嗯", "parent": "4459966654066212", "t": "1578895620"}, {"uid": "1985089787", "mid": "4459996072561814", "user_name": "从别后_忆相逢_几回魂梦与君同", "text": "回复@海明威评:是的 这条路走过几次 基本没啥车 速度肯定快", "parent": "4459990934358202", "t": "1578829380"}, {"uid": "2677617437", "mid": "4459990934358202", "user_name": "海明威评", "text": "速度太快和撞的位置都有关系。说明不了汽车结构是否安全。", "parent": "4459966654066212", "t": "1578828120"}]