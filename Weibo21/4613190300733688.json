[{"uid": "3288875501", "mid": "4613190300733688", "user_name": "河南日报", "text": "#两会豫报# 【守护亲情让爱回家！#两会上河南村主任的发言让人泪目#】全国两会上，全国人大代表裴春亮发言说:“为了更好的生活，夫妻两口出去打工，把孩子丢给老人照顾，一走就是好多年……”别让留守儿童成为时代的伤口……O网页链接", "parent": null, "t": "1615353720"}, {"uid": "3078223174", "mid": "4613295451411948", "user_name": "天天天蓝jhy", "text": "这不该上热搜吗，这才是该上热搜的啊。这就是我们农村现在的现状啊", "parent": "4613190300733688", "t": "1615378800"}, {"uid": "3145012554", "mid": "4613499906427169", "user_name": "不难哄的温霜降", "text": "父母只爱子则为之计深远", "parent": "4613295451411948", "t": "1615427520"}, {"uid": "6344052594", "mid": "4613658883920859", "user_name": "眉眼山川w", "text": "的确是现状啊，父母不出去挣不来钱，小孩上学，日常花销都需要钱，老的老小的小只能在家", "parent": "4613295451411948", "t": "1615465440"}, {"uid": "2745492371", "mid": "4613329537994739", "user_name": "Lee-惠晶", "text": "留守儿童真的很惨，学业得不到照顾，心理得不到关爱，有的连基本健康都难以保证", "parent": "4613190300733688", "t": "1615386900"}, {"uid": "6561934195", "mid": "4613639124813328", "user_name": "时光正好199201", "text": "有些人是逼不得已为了生计让小孩做留守儿童。有些人是只生不养根本不知道身为父母的责任。孩子生了扔给老人带根本没有机会学着成长为有责任的父母。。。现在农村跟大城市差距太大了，，在不注重农村教育以后就完蛋了的感觉", "parent": "4613329537994739", "t": "1615460700"}, {"uid": "7520294970", "mid": "4613558917137605", "user_name": "独一无二的路径", "text": "确实是，农村太多这种情况了", "parent": "4613329537994739", "t": "1615441620"}, {"uid": "2737600607", "mid": "4613200710735150", "user_name": "警校小李", "text": "我们何曾不是这般", "parent": "4613190300733688", "t": "1615356180"}, {"uid": "7194115226", "mid": "4613325797986019", "user_name": "橙二er", "text": "这就是农村现状啊，这才是该提的提案啊", "parent": "4613190300733688", "t": "1615386000"}, {"uid": "6045579618", "mid": "4613323053602589", "user_name": "提拉米我苏", "text": "本小学老师也觉得这个问题太严重了，越小影响越大。不仅仅是父母与孩子的隔阂，各个方面的发展都受了很大影响。", "parent": "4613190300733688", "t": "1615385340"}, {"uid": "6539405043", "mid": "4613341233022184", "user_name": "一酸儿", "text": "对呀，我小时候的童年都是没有爸爸参与的，有时候农忙回家一趟，有时候一年才回家一次。这也是我永远都缺憾。河南农民养活了大半个中国人却养不起自己的小家", "parent": "4613190300733688", "t": "1615389720"}, {"uid": "6128695043", "mid": "4613342372567496", "user_name": "木木乐52", "text": "种地不能养家糊口 只能外出打工维持生计", "parent": "4613190300733688", "t": "1615389960"}, {"uid": "5644633865", "mid": "4613350606768754", "user_name": "小姜要中大奖", "text": "我小时候不懂事问我爸：你咋那么喜欢出去打工，天天不在家，就过年回来，我把：我不出去打工谁挣钱呢？我：那钱够花不就行了，我可以少花一点。我爸：你再少花咱家四亩地，咱啥也不买光吃饭养活你们姐弟仨也不够花。谁不想家里面待着，谁想出去挣钱啊？。很多年后，我明白谁不想在家待着谁想出去挣钱了", "parent": "4613190300733688", "t": "1615391940"}, {"uid": "6420919592", "mid": "4613343950143506", "user_name": "这次又要改个什么名字呢", "text": "养了大半个中国，却养不起自己的小家", "parent": "4613190300733688", "t": "1615390320"}, {"uid": "6441442726", "mid": "4613342670622595", "user_name": "要多喜乐常平安", "text": "我现在十八，七八年前上小学的时候爸爸妈妈每年都要在秋季去其他地区打工，我就跟着奶奶，可能条件还算可以，其实当时不觉得自己有多苦，但是现在想想很多地方留守儿童现状确实很值得重视。我这种相对比较幸运的条件还可以的只是少数。", "parent": "4613190300733688", "t": "1615390020"}, {"uid": "6441442726", "mid": "4613344223560396", "user_name": "要多喜乐常平安", "text": "有时候对待不同程度留守人群还是要区分对待一下，部分留守儿童（像我小时候）是没有“留守”的概念的，这种情况下就没有必要跟孩子强调留守是“很惨的事”这种理念或没有必要过多表露这种情绪，孩子的世界是很单纯的，没有必要让他（她）被迫以不太好的形式发现自己是弱势群体。", "parent": "4613342670622595", "t": "1615390380"}, {"uid": "3173848934", "mid": "4613470244834773", "user_name": "梧桐雨的坠落", "text": "这应该引起大家的关注。留守，牵扯的不是一代人的问题，牵扯到的是社会方方面面，健康，心里，教育，养老，基本上是一个社会的重要组成部分。解决好留守问题，才会使经济全面发展，人口素质提高。", "parent": "4613190300733688", "t": "1615420440"}, {"uid": "6628401794", "mid": "4613332994888488", "user_name": "刘逸尘111", "text": "我们何尝不是这般，小时候一放学回家就哭，每天都在看日历，一天一天的等着过年和父母团聚😭", "parent": "4613190300733688", "t": "1615387740"}, {"uid": "1904814545", "mid": "4613403643216281", "user_name": "知足常乐的常乐", "text": "看头像应该是自家姐妹，抱抱你，都会好的", "parent": "4613332994888488", "t": "1615404600"}, {"uid": "7197540411", "mid": "4613493704099245", "user_name": "川儿啊a", "text": "抱抱", "parent": "4613332994888488", "t": "1615426020"}, {"uid": "6241436611", "mid": "4613193111178221", "user_name": "打十环", "text": "让家乡留住亲情", "parent": "4613190300733688", "t": "1615354380"}, {"uid": "6327123630", "mid": "4613482987654149", "user_name": "短发第二年y", "text": "唉 不知道为什么上不了热搜 希望多关注关注我们河南 已经很难了", "parent": "4613190300733688", "t": "1615423500"}, {"uid": "2652723550", "mid": "4613209404740027", "user_name": "河南省驻上海团工委", "text": "转发微博", "parent": "4613190300733688", "t": "1615358280"}, {"uid": "5692906791", "mid": "4613343959058688", "user_name": "不加糖的小土豆儿", "text": "留守儿童问题值得关注", "parent": "4613190300733688", "t": "1615390320"}, {"uid": "2785916623", "mid": "4613496388453447", "user_name": "卿染_Gemini", "text": "我们就是作为留守儿童长大的", "parent": "4613190300733688", "t": "1615426680"}, {"uid": "2477405887", "mid": "4613508014279913", "user_name": "风停了丶芸知道", "text": "前几天河南的热搜有一条是，河南是全国出去打工人数，最多的一个省。看完以后感觉河南是真的穷，外出打工数量是全国第一", "parent": "4613190300733688", "t": "1615429440"}, {"uid": "2335319562", "mid": "4613516122131434", "user_name": "小橙看世界", "text": "这就上不了热搜", "parent": "4613190300733688", "t": "1615431420"}, {"uid": "3626620425", "mid": "4613514834739293", "user_name": "转眼三年又三年", "text": "外地同学讲河南只有一个211的原因，是怕都读书没人种地，农业、人口大省你把农大搬过来起码有个985（15年代表提议过）。见过太多父母外出务工，导致小孩初高中不理解，家庭氛围差恶性循环。宏观调控本身就不公平，要牺牲一部分的利益，但是你得做到相对平衡吧？", "parent": "4613190300733688", "t": "1615431060"}, {"uid": "1040183403", "mid": "4613647173681407", "user_name": "背后荣光", "text": "回复@背后荣光:现在基本都是研究生了，本科生毕业确实没有学历优势。河南的二本也可以看外省的985221研究生啊，而且是全国统一分数，你和北京人都是一样的录取分数线。", "parent": "4613647173681407", "t": "1615462620"}, {"uid": "1040183403", "mid": "4613646167311226", "user_name": "背后荣光", "text": "回复@转眼三年又三年:我觉得现在要求高是因为学生多加上二本确实好考了，现在的河南的二本线放在十五年前很可能上不了一专线的。我接触的二本毕业生在工作时的能力真的就是当年大专毕业生的水平。所以起码你是个双非才能基本代表你的能力，我说的是总体。二本里也有牛逼人物，但是那代表不了总体。", "parent": "4613529917981723", "t": "1615462380"}, {"uid": "1040183403", "mid": "4613645235652169", "user_name": "背后荣光", "text": "回复@转眼三年又三年:本省的二本和省外的二本在外省求职待遇一样的，差别就是985211和二本，跟哪个省没关系。只要985211的基本都是大公司，稍微好点的还不至于。甚至很多好公司社招不卡985212或者双非的，还是看中实力。985211只是应届毕业生求职的敲门砖。", "parent": "4613529917981723", "t": "1615462200"}, {"uid": "3626620425", "mid": "4613529917981723", "user_name": "转眼三年又三年", "text": "回复@背后荣光:本省的学历在外省认可度不高，和河南人口相当的省份，教育资源都比河南好很多，当然都希望发展的越来越好。", "parent": "4613517305449628", "t": "1615434660"}, {"uid": "3626620425", "mid": "4613528361373895", "user_name": "转眼三年又三年", "text": "回复@背后荣光:师兄好，如果留在省内，那么省内本科院校足以。去沿海省份稍微好点的公司卡985211非常严，现在已经不是上了大学就有出路的年代了，一本二本区别也没之前那么大，主要看双非和非双非。看之前报道15年河南代表提过迁校的建议。", "parent": "4613517305449628", "t": "1615434300"}, {"uid": "1040183403", "mid": "4613517305449628", "user_name": "背后荣光", "text": "这几年河南的分数线也是一降再降，比我们那个时候容易多了，十五年前你要是脑子不灵光，上个二本都很难，现在的学生就算脑子普通，但只要足够勤奋，考上二本线是没绝对问题的。", "parent": "4613514834739293", "t": "1615431660"}, {"uid": "1040183403", "mid": "4613516080450975", "user_name": "背后荣光", "text": "我觉得你说的不对，高考河南考生录取比例还是不小的，虽然只有一个211，外省的985211在河南招生也少，但是河南每年考上大学的并不少，并不是每个人都能付读211985的，毕竟985211不多，更多的还是普通二本和大专，这个河南本省的学校也不算少。", "parent": "4613514834739293", "t": "1615431360"}, {"uid": "6373882805", "mid": "4613505112867216", "user_name": "气宇轩昂的糯叽叽", "text": "是的啊 爸爸妈妈出去挣钱养家，过年的时候才能回家一次，还有可能几年不回家。留自己的孩子独自面对", "parent": "4613190300733688", "t": "1615428780"}, {"uid": "5293683063", "mid": "4613476523967190", "user_name": "姗姗丷", "text": "留守儿童问题真的应该重视，我们姐弟三个和父母从未亲近过", "parent": "4613190300733688", "t": "1615421940"}, {"uid": "5518314156", "mid": "4613493330022531", "user_name": "cc呢喃123", "text": "说的很现实，但是这不该依靠国家政策，大部分人根本不会选择留在家里，这种老旧思想认为在外面挣得多，改变留守儿童现状，必须得转变这种老旧思想", "parent": "4613190300733688", "t": "1615425960"}, {"uid": "5384080551", "mid": "4613483833853838", "user_name": "甲乙丙丁丑-", "text": "我们学校大部分都是留守儿童，跟着爷爷奶奶，爷爷奶奶也不会教育，有的孩子从出生就没见过自己的妈妈，无论是教育还是生活他们都与别人差距太大了。", "parent": "4613190300733688", "t": "1615423680"}, {"uid": "7215765343", "mid": "4613489844551796", "user_name": "_月照花林皆似霰_", "text": "时代的伤口", "parent": "4613190300733688", "t": "1615425120"}, {"uid": "1572492831", "mid": "4613647336735796", "user_name": "洛城黑曼巴", "text": "如果不是国家的上层设计，强行调控，河南早发展起来了，交通中心，要有有人，要地有地，还有资源，经济发展的几个要素都具备了，怎么可能发展不起来？", "parent": "4613190300733688", "t": "1615462680"}, {"uid": "2477405887", "mid": "4613508693495776", "user_name": "风停了丶芸知道", "text": "河南是中国人口大省，数一数二的那种，全国各地打工的人，都能见到河南人的身影。河南的老百姓何时能摆脱这种状况呢？", "parent": "4613190300733688", "t": "1615429620"}, {"uid": "5449306763", "mid": "4613336698455333", "user_name": "v杜女郎v", "text": "所以为什么还要提倡多生？其实就算不提倡，家里老人也会说，“1个太少，再生一个吧，反正有我们带着……”结果可想而知咯？", "parent": "4613190300733688", "t": "1615388640"}, {"uid": "3959743459", "mid": "4613331891782317", "user_name": "ZMJJM", "text": "这才是为什么要实现乡村振兴，让村里的人能够不再背井离乡去打工", "parent": "4613190300733688", "t": "1615387440"}, {"uid": "1659417100", "mid": "4613921119668553", "user_name": "听天降晚霜", "text": "这才是好提案，没有扯犊子", "parent": "4613190300733688", "t": "1615527960"}, {"uid": "6470698677", "mid": "4613673131445963", "user_name": "Honey-李敏", "text": "农村的制度需要改善，国家富裕了，农民的生活得到保障的同时还需要提高", "parent": "4613190300733688", "t": "1615468800"}, {"uid": "1808804873", "mid": "4613668556505910", "user_name": "2021大鱼大肉", "text": "现在农村的小孩，几乎初中没上完就辍学了！父母在厂子里干活，一年回家不了几次。孩子没人教管，再加上对手机、电脑游戏的依赖，九年义务教育都很难结业！", "parent": "4613190300733688", "t": "1615467720"}, {"uid": "6033897384", "mid": "4613665333971667", "user_name": "小丁同志k", "text": "留守到高中才回家的我感觉不到家庭的温暖", "parent": "4613190300733688", "t": "1615466940"}, {"uid": "6870205818", "mid": "4613662537679456", "user_name": "冰火猿狼", "text": "为什么上不了热搜呢", "parent": "4613190300733688", "t": "1615466280"}, {"uid": "6011355013", "mid": "4613645478661658", "user_name": "从今以后都会很可以本人", "text": "可是不出去挣钱，一家人靠种地也活不了吧", "parent": "4613190300733688", "t": "1615462260"}, {"uid": "2661243665", "mid": "4613641121044572", "user_name": "1943米兰小铁匠", "text": "我曾经就是那个小孩", "parent": "4613190300733688", "t": "1615461180"}, {"uid": "1782034711", "mid": "4613612909629140", "user_name": "眉目似星海", "text": "应该重视", "parent": "4613190300733688", "t": "1615454460"}, {"uid": "2412471883", "mid": "4613606027823682", "user_name": "娜娜ai柠檬", "text": "为了生活", "parent": "4613190300733688", "t": "1615452840"}, {"uid": "5643042627", "mid": "4613604848435952", "user_name": "汪叽的WiFiBuzz", "text": "让人泪目", "parent": "4613190300733688", "t": "1615452540"}, {"uid": "5241767044", "mid": "4613590981545221", "user_name": "皮蛋瘦肉粥不要瘦肉glw", "text": "那也不行，现在农村结个