[{"uid": "6048314529", "mid": "4567956669077820", "user_name": "飞春读传", "text": "【铁人王进喜这张照片，日本人从中看出3个国家级秘密】\n这是一张著名的泄密照片，刊登在1964年第一期的《中国画报》封面。\n\n图中，大庆“铁人”王进喜，头戴大狗皮帽，身穿厚棉袄，顶着鹅毛大雪，握着钻机手柄眺望远方，在他身后散布着星星点点的石油井架。\n\n日本早就知道东北石油矿产丰富，此时经济发展后，更是想与世界其他国家竞争，参与大庆油田的开发。\n\n看到这张照片后，日本人进行了深入细致的推测，最后推算出中国油田相关数据。从而有的放矢，精准竞标成功。\n\n日本都在照片上看到什么信息了呢？\n\n1，根据王进喜的衣着判断，地点在北纬46度至48度的区域内，进而推断大庆油田位于齐齐哈尔与哈尔滨之间。\n\n2，通过照片中王进喜所握手柄的架式，推断出油井的直径。\n\n3，从王进喜所站的钻井与背后油田间的距离，和井架密度，推算出油田的大致储量和产量……", "parent": null, "t": "1604569200"}, {"uid": "2247064077", "mid": "4568416654724350", "user_name": "就是你啦啦啦", "text": "别吹了，知不知道抗日的时候鬼子在大庆打过井？", "parent": "4567956669077820", "t": "1604678820"}, {"uid": "2247064077", "mid": "4569807410963579", "user_name": "就是你啦啦啦", "text": "没打到层位就没法获得工业产量，你可以想象当年大庆打出高产井对岸鬼子是种什么心情。。。", "parent": "4568416654724350", "t": "1605010440"}, {"uid": "6187112364", "mid": "4569791248991764", "user_name": "陈皮96", "text": "鬼子要是当时发现大庆就不用急着去东南亚了！", "parent": "4568416654724350", "t": "1605006540"}, {"uid": "1423600983", "mid": "4571058252026367", "user_name": "牧马人之爱", "text": "虽然中国人都很崇拜日本人，也不能这么吹，其实日本人早就知道这个油田", "parent": "4567956669077820", "t": "1605308640"}, {"uid": "6853340979", "mid": "4571447605333144", "user_name": "今日待签到", "text": "我心思着你是凭啥代表中国人呢？竟然说中国人都崇拜小日本？我不认同，我不崇拜。", "parent": "4571058252026367", "t": "1605401460"}, {"uid": "3110343013", "mid": "4571236409285395", "user_name": "b泊小船", "text": "你自己崇拜日本人就得了，可别拉上全体中国人哦……", "parent": "4571058252026367", "t": "1605351120"}, {"uid": "1716655541", "mid": "4571198693836108", "user_name": "小太阳高高照吧", "text": "是的，日本很早就判断对了，当时就打过很多口井，当时打不到这么深，差了整整300米，这可不是一点点的技术差距呢。", "parent": "4571058252026367", "t": "1605342120"}, {"uid": "5936793324", "mid": "4570111878896576", "user_name": "老谷666", "text": "这文章忽悠了差不多一辈人", "parent": "4567956669077820", "t": "1605083040"}, {"uid": "5579551311", "mid": "4571534293732653", "user_name": "水处理员89165", "text": "估计不止，我是信了好久直到前两年看了辟谣才明白，哈哈哈哈", "parent": "4570111878896576", "t": "1605422160"}, {"uid": "1214921340", "mid": "4569348171107946", "user_name": "嘭嘭嘭彭嘭嘭嘭", "text": "谣言止于智者", "parent": "4567956669077820", "t": "1604900940"}, {"uid": "5121554791", "mid": "4570472760742165", "user_name": "hi-ballball", "text": "看到大家都很清楚这事，只有作者是%$#¥我就放心了", "parent": "4567956669077820", "t": "1605169080"}, {"uid": "1624186775", "mid": "4569000745634914", "user_name": "如是我闻一尘子", "text": "已经证明是谣言了", "parent": "4567956669077820", "t": "1604818080"}, {"uid": "1992398707", "mid": "4571431549279491", "user_name": "邱志明", "text": " ¡查看动图", "parent": "4567956669077820", "t": "1605397620"}, {"uid": "5099096994", "mid": "4571206563140858", "user_name": "安乐飞天下第一", "text": "可以的，怪不得母牛能上天。原来是你在吹人家牛逼", "parent": "4567956669077820", "t": "1605343980"}, {"uid": "1001089292", "mid": "4570532894218797", "user_name": "樱桃的爹很幸福", "text": "日本哪年竞标大庆油田？", "parent": "4567956669077820", "t": "1605183420"}, {"uid": "1900656335", "mid": "4568688324251340", "user_name": "蓝色嘅先生", "text": "小编 你去做侦探吧", "parent": "4567956669077820", "t": "1604743620"}, {"uid": "1719702740", "mid": "4571558482285858", "user_name": "萧肖涛", "text": "精日分子", "parent": "4567956669077820", "t": "1605427920"}, {"uid": "2155234543", "mid": "4571444580976590", "user_name": "纯洁小红杏", "text": "垃圾文章", "parent": "4567956669077820", "t": "1605400740"}, {"uid": "5615166514", "mid": "4571395055681916", "user_name": "FrankShen1", "text": "谣言", "parent": "4567956669077820", "t": "1605388920"}, {"uid": "6407508074", "mid": "4571324557298658", "user_name": "单身贵族509", "text": "呵呵", "parent": "4567956669077820", "t": "1605372120"}, {"uid": "2840453083", "mid": "4571165224076564", "user_name": "超勇Eric", "text": "😱", "parent": "4567956669077820", "t": "1605334140"}]